#:kivy 1.0.9

<WelcomeScreen>:
    canvas.before:
        Color:
            rgba: 0.5, 0.5, 1, 1  # Set the color to light blue
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical 
        size: 300, 500
        pos_hint: {'center_x': .5, 'center_y': .5}
        Image:
            source: 'assets/logo.png'
            #size: 150, 150
            size: 100, 100
            pos_hint: {'center_x': 0.5}
        Label:
            text: '[b][color=1,1,0,1]Welcome to the App![/color][/b]'
            markup: True
            font_size: 30
            pos_hint: {'center_x': 0.5}
        Button:
            text: 'Go to login'
            on_press: root.login_screen()
            size_hint: None,None
            size: 150,50
            pos_hint: {'center_x': 0.5}
            pos: 100, 100
        Widget:

<MainScreen>:
    BoxLayout:
        orientation: 'horizontal'
        Camera:
            id: camera
            resolution: (640, 480)
            play: True
            size_hint_x: 0.5
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Start Voice Recognition'
                on_press: root.voice_recognition()
            Label:
                id: voice_label
                text: 'Voice Recognition Result'
            BoxLayout:
                BoxLayout:
                    TextInput:
                        id: voice_input
                        text: root.voice_input_text
                        multiline: True
                        readonly: True
